<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.angeloparenteapp.kmk_kissmarrykill.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/transparency1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000"
                android:elevation="4dp"
                android:layout_above="@+id/buttons_firstLayout" />

            <ImageView
                android:id="@+id/firstImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ProgressBar
                android:id="@+id/progress1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttons_firstLayout"
                android:background="#8000"
                android:elevation="2dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <LinearLayout
                android:id="@+id/buttons_firstLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercKiss1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/kiss1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kiss" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercMarry1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/marry1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/marry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercKill1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/kill1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kill" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/transparency2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000"
                android:elevation="4dp"
                android:layout_above="@+id/buttons_secondLayout"/>

            <ImageView
                android:id="@+id/secondImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ProgressBar
                android:id="@+id/progress2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttons_secondLayout"
                android:background="#8000"
                android:elevation="2dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <LinearLayout
                android:id="@+id/buttons_secondLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercKiss2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/kiss2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kiss" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercMarry2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/marry2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/marry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercKill2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/kill2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kill" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/transparency3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000"
                android:elevation="4dp"
                android:layout_above="@+id/buttons_thirdLayout" />

            <ImageView
                android:id="@+id/thirdImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ProgressBar
                android:id="@+id/progress3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttons_thirdLayout"
                android:background="#8000"
                android:elevation="2dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <LinearLayout
                android:id="@+id/buttons_thirdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercKiss3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/kiss3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kiss" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercMarry3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/marry3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/marry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPercKill3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/kill3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circle"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kill" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/next_buttons"
        android:background="#FFFFFF" />

    <LinearLayout
        android:id="@+id/next_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="#000000"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="#000000"
            android:textSize="28sp" />

    </LinearLayout>

</RelativeLayout>